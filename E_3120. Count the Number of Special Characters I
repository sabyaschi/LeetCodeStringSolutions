class Solution {
    public int numberOfSpecialChars(String word) {
        int count = 0;
        int arr[] = new int[26];
        int arr1[] = new int[26];
        for (char c : word.toCharArray()) {
            if (Character.isUpperCase(c)) {
                int tmp = c - 'A';
                arr1[tmp]++;
            } else {
                int tmp1 = c - 'a';
                arr[tmp1]++;
            }
        }
        for (int i = 0; i < 26; i++) {
            if (arr[i] != 0 && arr1[i] != 0) {
                if (arr[i] <= arr1[i] || arr[i] >= arr1[i]) {
                    count += 1;
                }
            }

        }
        return count;
    }
}
